[
  {
    "name": "Users",
    "item": [
      {
        "name": "Get All Users (employee only)",
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Get all users successful', () => {",
                "  pm.expect(pm.response.code).to.equal(200);",
                "  const response = pm.response.json();",
                "  pm.expect(response.users).to.be.an('array');",
                "});"
              ],
              "type": "text/javascript",
              "packages": {}
            }
          }
        ],
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{employeeAccessToken}}",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{baseUrl}}/users?page=1&limit=10",
            "host": ["{{baseUrl}}"],
            "path": ["users"],
            "query": [
              {"key": "page", "value": "1"},
              {"key": "limit", "value": "10"}
            ]
          }
        },
        "response": []
      },
      {
        "name": "Get User by ID",
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Get user by ID successful', () => {",
                "  pm.expect(pm.response.code).to.equal(200);",
                "  const response = pm.response.json();",
                "  pm.expect(response.UserID).to.equal(1);",
                "});"
              ],
              "type": "text/javascript",
              "packages": {}
            }
          }
        ],
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{userAccessToken}}",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{baseUrl}}/users/1",
            "host": ["{{baseUrl}}"],
            "path": ["users", "1"]
          }
        },
        "response": []
      },
      {
        "name": "Update User",
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Update user successful', () => {",
                "  pm.expect(pm.response.code).to.equal(200);",
                "  const response = pm.response.json();",
                "  pm.expect(response.Name).to.equal('Updated User');",
                "});"
              ],
              "type": "text/javascript"
            }
          }
        ],
        "request": {
          "method": "PUT",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{userAccessToken}}",
              "type": "text"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"name\": \"Updated User\",\n  \"phone\": \"1234567890\"\n}",
            "options": {
              "raw": {
                "language": "json"
              }
            }
          },
          "url": {
            "raw": "{{baseUrl}}/users/1",
            "host": ["{{baseUrl}}"],
            "path": ["users", "1"]
          }
        },
        "response": []
      },
      {
        "name": "Delete User",
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Delete user successful', () => {",
                "  pm.expect(pm.response.code).to.equal(204);",
                "});"
              ],
              "type": "text/javascript"
            }
          }
        ],
        "request": {
          "method": "DELETE",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{userAccessToken}}",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{baseUrl}}/users/1",
            "host": ["{{baseUrl}}"],
            "path": ["users", "1"]
          }
        },
        "response": []
      }
    ]
  }
]